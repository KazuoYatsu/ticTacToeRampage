<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="DefaultStyle">
        <item name="android:background">@color/app_background</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    
    <style name="LeftTopRowStyle" parent="@style/DefaultStyle">
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
    </style>
    
    <style name="MiddleTopRowStyle" parent="@style/DefaultStyle">
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
    </style>
    
    <style name="RightTopRowStyle" parent="@style/DefaultStyle">
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
    </style>
    
    <style name="LeftMidRowStyle" parent="@style/LeftTopRowStyle"></style>
    <style name="MiddleMidRowStyle" parent="@style/MiddleTopRowStyle"></style>
    <style name="RightMidRowStyle" parent="@style/RightTopRowStyle"></style>
    
    <style name="LeftBotRowStyle" parent="@style/DefaultStyle">
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
    </style>
    
    <style name="MiddleBotRowStyle" parent="@style/DefaultStyle">
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
    </style>
    
    <style name="RightBotRowStyle" parent="@style/DefaultStyle">
        <item name="android:padding">@dimen/default_margin</item>
    </style>
    
    <style name="TextStyle">
        <item name="android:textColor">@color/display_color</item>
        <item name="android:textSize">@dimen/display_font_size</item>
    </style>
    
    <style name="TitleStyle">
        <item name="android:textColor">@color/display_color</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>
    
    <style name="MenuButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    
    

</resources>
